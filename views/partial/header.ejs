<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css">
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/js/bulma.min.js"></script>
    <title>Document</title>
</head>

<body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="/players">
                <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" href="/players">
                    Players
                </a>

                <a class="navbar-item" href="/nations">
                    Nations
                </a>

            </div>
            
            <% if(userId){ %>
                <div class="dropdown is-active mx-6 my-2">
                    <div class="dropdown-trigger">
                      <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
                        <span>Option</span>
                        <span class="icon is-small">
                          <i class="fas fa-angle-down" aria-hidden="true"></i>
                        </span>
                      </button>
                    </div>
                    <div class="dropdown-menu" id="dropdown-menu" role="menu">
                      <div class="dropdown-content">
                        <a href="/users/dashboard" class="dropdown-item">
                          Dashboard
                        </a>
                        <a class="dropdown-item">
                          Edit profile
                        </a>
                        <a href="/users/logout" class="dropdown-item is-active">
                          Logout
                        </a>
                      </div>
                    </div>
                  </div>
                <% } else { %>
                    <div class="navbar-end mx-0 my-0">
                        <div class="navbar-item">
                            <div class="buttons">
                                <a class="button is-primary" href="/users/register">
                                    <strong>Register</strong>
                                </a>
                                <a class="button is-light" href="/users/login">
                                    Log in
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>

            <!-- <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
