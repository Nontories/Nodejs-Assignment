<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <title><%= title %></title>
</head>
<body>
    
    <%- include('partial/header') %>

    <div class="columns">
        <div class="column">
            <table class="table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Decription</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% nations.forEach(function(nation){ %>
                        <tr class="my-2">
                            <td>
                                <figure class="image is-64x64">
                                    <img src=<%=nation.image %> >
                                </figure>
                            </td>
                            <td>
                                <%= nation.name %>
                            </td>
                            <td>
                                <%= nation.description %>
                            </td>
                            <td>
                                <div class="buttons are-small">
                                    <a href=<%="/nations/edit/" + nation._id %>><button
                                            class="button is-warning is-light">Edit</button></a>
                                    <a href=<%="/nations/delete/" + nation._id %>><button
                                            class="button is-danger is-light">Delete</button></a>

                                </div>
                            </td>
                        </tr>
                        <% })%>
                </tbody>
            </table>
        </div>
        <div class="column">
            <form class="box" method="post">
                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Name</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <input class="input is-info is-rounded" name="name" type="text" placeholder="Viet Nam" required>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Image</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <input class="input is-info is-rounded" name="image" type="text" placeholder="URL of image" required>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Description</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <input class="input is-info is-rounded" name="description" type="text" placeholder="Description for nation">
                            </div>

                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <button class="button is-primary" type="submit">
                                    Create
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>
</html>